# === Server (Render) ===
PORT=5000

# Never commit real URIs or secrets here — placeholders only.
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
JWT_SECRET=example-not-a-secret-jwt-key-for-development-only
SESSION_SECRET=example-not-a-secret-session-key-for-development-only

# Comma-separated list of allowed frontend origins (CORS)
# Include localhost for dev + production domain + preview wildcard.
CLIENT_URL=http://localhost:5173,https://marrakechdunes.vercel.app,https://marrakechdunes-*.vercel.app

# Optional (set only if you actually use email)
EMAIL_USER=
EMAIL_PASS=

# Optional integrations
WHATSAPP_RECEIVERS=

# Console login passwords (set in Render dashboard, not here)
ADMIN_PASSWORD=example-not-a-secret-admin-password
SUPERADMIN_PASSWORD=example-not-a-secret-superadmin-password

NODE_ENV=production
LOG_LEVEL=info


# === Client (Vercel) ===
# Where the frontend calls your API (Render)
VITE_API_URL=http://localhost:5000
# Where images/static files come from
VITE_ASSETS_BASE=http://localhost:5000/attached_assets

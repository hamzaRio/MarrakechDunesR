# MongoDB Connection
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Session Security
SESSION_SECRET=<generate-random-64-bytes>

# Admin Passwords
SUPERADMIN_PASSWORD=<generate-secure-password>
ADMIN_PASSWORD=<generate-secure-password>

# Client URLs (comma-separated, supports wildcards)
CLIENT_URL=http://localhost:5173,https://marrakechdunes.vercel.app,https://marrakechdunes-*.vercel.app

# Node Environment
NODE_ENV=production

# Client Environment Variables (for Vercel)
VITE_API_URL=https://<render-app>.onrender.com
VITE_ASSETS_BASE=https://<render-app>.onrender.com/attached_assets
